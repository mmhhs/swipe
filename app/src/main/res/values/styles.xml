<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="SwipeBackLayout">
        <item name="edge_size">50dp</item>
        <item name="shadow_left">@mipmap/swipe_shadow_left</item>
        <item name="shadow_right">@mipmap/swipe_shadow_right</item>
        <item name="shadow_bottom">@mipmap/swipe_shadow_bottom</item>
    </style>
    <style name="SlideRight" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/swipe_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/swipe_slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/swipe_slide_in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/swipe_slide_out_to_right</item>
    </style>
</resources>
